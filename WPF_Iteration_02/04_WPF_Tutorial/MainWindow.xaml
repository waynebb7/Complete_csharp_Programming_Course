<Window x:Class="_04_WPF_Tutorial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04_WPF_Tutorial"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Name="tbStatus"  FontSize="50" />
        <Button Name="btnToggleRun" Content="Run" FontSize="20" Width="100" 
                Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" 
                Click="btnToggleRun_Click" />
    </Grid>
</Window>
